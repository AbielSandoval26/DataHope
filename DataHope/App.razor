 <CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <h1>HOLA SAMUEL</h1>
                    }
                    else
                    {
                        <p role="alert">No esta autorizado.</p>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudContainer Class="d-flex align-center flex-grow-1 gap-4">
                    <MudGrid Class="py-16 d-flex flex-1" Justify="Justify.Center">
                        <MudItem>
                            <MudText Typo="Typo.h4">Pagina no encontrada.</MudText>
                            <MudText Align="Align.Center" Color="Color.Error">404 Not Found.</MudText>
                        </MudItem>
                    </MudGrid>
                </MudContainer>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>