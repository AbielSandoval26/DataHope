@code {

    private bool isShowDescription = true;
    private bool isShowMainTopics;
    private bool isShowWhoisThisCertification;
    private bool isShowPreviousRequirement;

    public async void showSection(int btn)
    {

        if (btn == 1)
        {
            isShowDescription = true;
            isShowMainTopics = false;
            isShowWhoisThisCertification = false;
            isShowPreviousRequirement = false;

        }
        if (btn == 2)
        {
            isShowMainTopics = true;
            isShowDescription = false;
            isShowWhoisThisCertification = false;
            isShowPreviousRequirement = false;
        }
        if (btn == 3)
        {
            isShowWhoisThisCertification = true;
            isShowDescription = false;
            isShowMainTopics = false;
            isShowPreviousRequirement = false;
        }
        if (btn == 4)
        {
            isShowPreviousRequirement = true;
            isShowWhoisThisCertification = false;
            isShowDescription = false;
            isShowMainTopics = false;
        }

        // await jsRuntime.InvokeVoidAsync("ChangeColor");
    }
