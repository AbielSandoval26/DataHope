<MudGrid Spacing="1" Justify="Justify.SpaceBetween" Class="pa-2">
    <MudItem xs="12" sm="6" md="4" Style="display:flex;">
        <MudCard Elevation="5" Style="background-color:indianred">
            @* <MudImage Src="/Images/Mision.png" Class="mt-3 d-flex justify-content-center " Height="70" Style="background-size:contain;" /> *@
            <MudCardMedia Image="/Images/Mision.png" Style="background-size:contain; background-color:none;" Height="70" />
            <MudCardContent>
                <MudText Typo="Typo.h5" Class="d-flex justify-content-center mb-3 text-white" Style="text-overflow:ellipsis;overflow:hidden;white-space:nowrap;">MISIÓN</MudText>
                <MudText Typo="Typo.body2" Align="Align.Justify" Class="text-white">
                    Nuestra misión es proporcionar servicios de investigación y análisis de datos excepcionales que superen
                    las expectativas de nuestros clientes a través de la aplicación de tecnologías y metodologías avanzadas,
                    comprometiéndonos con la transformación de datos en información estratégica que contribuyan al
                    éxito y crecimiento continuo de nuestros clientes.
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="4" Style="display:flex;">
        <MudCard Elevation="5" Style="background-color:indianred; width:100%; height:100%;">
            @* <MudImage Src="/Images/Mision.png" Class="mt-3 d-flex justify-content-center " Height="70" Style="background-size:contain;" /> *@
            <MudCardMedia Image="/Images/vision.png" Style="background-size:contain; background-color:none; filter: grayscale(1);" Height="70" />
            <MudCardContent>
                <MudText Typo="Typo.h5" Class="d-flex justify-content-center mb-3 text-white" Style="text-overflow:ellipsis;overflow:hidden;white-space:nowrap;">VISIÓN</MudText>
                <MudText Typo="Typo.body2" Align="Align.Justify" Class="text-white">
                    Ser reconocidos como líderes en el campo de la investigación y análisis de datos, siendo la opción
                    preferida para organizaciones que buscan comprender a fondo su entorno; tomando decisiones
                    informadas y avanzando en el cumplimiento de sus objetivos.
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="4" Style="display:flex;">
        <MudCard Elevation="5" Style="background-color:indianred; width:100%; height:100%;">
            @* <MudImage Src="/Images/Mision.png" Class="mt-3 d-flex justify-content-center " Height="70" Style="background-size:contain;" /> *@
            <MudCardMedia Image="/Images/valores.png" Style="background-size:contain; background-color:none;" Height="70" />
            <MudCardContent>
                <MudText Typo="Typo.h5" Class="d-flex justify-content-center mb-3 text-white" Style="text-overflow:ellipsis;overflow:hidden;white-space:nowrap;">VALORES</MudText>
                <MudText Typo="Typo.body2" Align="Align.Center" Class="text-white">
                    Excelencia <br />
                    Innovación <br />
                    Colaboración <br />
                    Ética <br />
                    Privacidad de la Información <br />
                    Desarrollo Profesional <br />
                    Compromiso con el Cliente
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

